<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_invocador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Nome de Invocador:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_elo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Elo:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_divisao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Divisão:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_pdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="PDLs:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_campeao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Campeão mais jogado:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_vitorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="% de vitórias:"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/platina" />

</LinearLayout>