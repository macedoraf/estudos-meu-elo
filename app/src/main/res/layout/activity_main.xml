<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_invocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome de Invocador" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:text="Elo"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_elo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/et_divisao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:hint="Divisão"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_divisao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_pdl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PDLs"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_campeao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campeão mais jogado" />

        <EditText
            android:id="@+id/et_vitorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="% de vitórias"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/bt_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>