<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_invocador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome de Invocador"/>

    <EditText
        android:id="@+id/et_elo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Elo"/>

    <EditText
        android:id="@+id/et_divisao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Divisão"/>

    <EditText
        android:id="@+id/et_pdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PDLs"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_campeao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Campeão mais jogado"/>

    <EditText
        android:id="@+id/et_vitorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="% de vitórias"
        android:inputType="number"/>

    <Button
        android:id="@+id/bt_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Entrar"/>

</LinearLayout>